<odoo>
    <data>
        <record id="hms_department_tree_view" model="ir.ui.view">
            <field name="name">Department Tree View</field>
            <field name="model">hms.department</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="capacity"/>
                    <field name="is_opened"/>
                </tree>
            </field>
        </record>
        <record id="hospital_departments_action" model="ir.actions.act_window">
            <field name="name">Departments</field>
            <field name="res_model">hms.department</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="hms_department_view" name="Departments" parent="hms_data_menu" action="hospital_departments_action"/>

    </data>
</odoo>
